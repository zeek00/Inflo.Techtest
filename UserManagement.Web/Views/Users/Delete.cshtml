@model UserManagement.Web.Models.Users.UserDeleteViewModel

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<div>
    <p>Are you sure you want to delete this user?</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Forename:</dt>
        <dd class="col-sm-10">@Model.Forename</dd>

        <dt class="col-sm-2">Surname:</dt>
        <dd class="col-sm-10">@Model.Surname</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Account Active:</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>

        <dt class="col-sm-2">Date of Birth:</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<div>
    <form asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
    </form>
</div>

<div>
    <a asp-controller="Users" asp-action="List" class="btn btn-primary">Cancel</a>
</div>
